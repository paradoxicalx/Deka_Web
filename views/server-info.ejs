<!doctype html>
<html lang="en">

<head>
  <%- include('./partials/head', {page: 'Informasi'}); %>
</head>

<body><!-- start body -->
  <%- include('./partials/loading'); %>
  <!-- end preloader -->

  <div id="coodiv-header" class="d-flex mx-auto flex-column moon-edition simple-sub-page">
    <%- include('./partials/navigation', {color: 'dark'}); %>
  </div>


  <section class="pt-25 position-relative">
    <div class="container">

      <div class="the_breadcrumb_conatiner_page">
        <div class="the_breadcrumb">
          <div class="breadcrumbs"><i class="fas fa-home"></i><a href="/">Deka</a>  / Informasi Jaringan </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12 help-center-header">
          <h5 class="help-center-title">Jadwal dan Informasi Jaringan</h5>
          <p class="help-center-text">Berikut ini adalah information berkaitan dengan status jaringan Deka bulan <span id="date-server"></span>.</p>
        </div>
      </div>
    </div>
  </section>


  <section class="pb-20">
    <div class="container">

      <div class="time-line-status">

        <% if(Object.keys(info).length > 0) { %>
        <% for (var i = 0; i < info.length; i++) { %>
          <div class="tt-time-status">
            <div class="row justify-content-center">
              <div class="col-md-2">
                <span class="title-status error"><%= info[i].type %></span>
              </div>
              <div class="col-md-10">
                <h5 class="title-status-h5"><%= info[i].title %> <span><%= info[i].date %></span></h5>
                <p class="title-status-p mb-0 mt-8"><%= info[i].description %></p>
                <hr>
              </div>
              <div class="status-div-optionel <%= (info[i].status == 'selesai') ? 'chck' : 'non' %>">
                <p><b><%= info[i].location %></b> <%= info[i].action %>. <span><%= info[i].status %> <i class="fa fa-circle-o-notch" aria-hidden="true"></i></span></p>
              </div>
            </div>
          </div>
        <% } %>
        <% } else { %>
          <div class="text-center">
            <i class="fa-3x fas fa-robot mb-4"></i>
            <h5>Informasi Tidak Tersedia</h5>
            <small>tidak ada gangguan atau jadwal perbaikan / perawatan</small>
          </div>
        <% } %>

      </div>



    </div>
  </section>


  <%- include('./partials/banner'); %>
  <%- include('./partials/footer'); %>

  <!-- jquery -->
  <script src="/js/jquery.min.js"></script>
  <script src="js/popper.min.js"></script>
  <!-- bootstrap JavaScript -->
  <script src="/js/bootstrap.min.js"></script>
  <!-- template JavaScript -->
  <script src="/js/template-scripts.js"></script>
  <!-- flickity JavaScript -->
  <script src="/js/flickity.pkgd.min.js"></script>
  <!-- carousel JavaScript -->
  <script src="/owlcarousel/owl.carousel.min.js"></script>
  <!-- parallax JavaScript -->
  <script src="/js/parallax.min.js"></script>
  <!-- mailchamp JavaScript -->
  <script src="/js/mailchamp.js"></script>
  <!-- bootstrap offcanvas -->
  <script src="/js/bootstrap.offcanvas.min.js"></script>
  <!-- touchSwipe JavaScript -->
  <script src="/js/jquery.touchSwipe.min.js"></script>
  <script src="/js/moment.js"></script>

  <script type="text/javascript">
    var dateserver = moment().format('MMMM YYYY')
    $('#date-server').text(dateserver)
  </script>
</body>

</html>
